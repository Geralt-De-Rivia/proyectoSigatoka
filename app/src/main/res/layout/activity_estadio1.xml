<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:background="#fff"
    tools:context=".Estadio1">

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="0dp"
        android:layout_y="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/estadio1" />

            <TextView
                android:id="@+id/txtEspacio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/estadio1_1" />

            <TextView
                android:id="@+id/txtEspacio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/estadio1_2" />

            <TextView
                android:id="@+id/txtEspacio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/estadio1_3" />

            <TextView
                android:id="@+id/txtEspacio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/estadio1_4" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>